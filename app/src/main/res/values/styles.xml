<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KillerDealer"></style>

    <style name="KillerDealer.Common"></style>
    <style name="KillerDealer.Common.wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KillerDealer.Text"></style>
    <style name="KillerDealer.Text.title" parent="KillerDealer.Common.wrapContent">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="KillerDealer.Text.number" parent="KillerDealer.Common.wrapContent">
        <item name="android:textSize">64sp</item>
    </style>
    <style name="KillerDealer.Text.numberSmall" parent="KillerDealer.Common.wrapContent">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="KillerDealer.Image"></style>
    <style name="KillerDealer.Image.circle">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">112dp</item>
    </style>

</resources>
