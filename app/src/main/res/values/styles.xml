<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="KillerDealer"></style>

    <style name="KillerDealer.Common"></style>

    <style name="KillerDealer.Text"></style>

    <style name="KillerDealer.Text.title" parent="KillerDealer.Common">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KillerDealer.Text.number" parent="KillerDealer.Common">
        <item name="android:textSize">@dimen/text_number</item>
    </style>

    <style name="KillerDealer.Text.smallNumber" parent="KillerDealer.Common">
        <item name="android:textSize">@dimen/text_smallnumber</item>
    </style>

    <style name="KillerDealer.Text.smallNumber.white" parent="KillerDealer.Text.smallNumber">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KillerDealer.Image"></style>

    <style name="KillerDealer.Image.circle">
        <item name="android:layout_width">@dimen/xxx_large</item>
        <item name="android:layout_height">@dimen/xxx_large</item>
    </style>

    <style name="KillerDealer.Image.smallCircle">
        <item name="android:layout_width">@dimen/xx_large</item>
        <item name="android:layout_height">@dimen/xx_large</item>
    </style>

</resources>
