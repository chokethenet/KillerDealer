<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.chokethe.killerdealer.TimersConfigActivity">

    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/tv_rise_config"
        style="@style/KillerDealer.Text.title"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="16dp"
        android:text="@string/rise_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/np_rise_mm_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_rise_mm"
        app:layout_constraintTop_toTopOf="@+id/tv_rise_config" />

    <TextView
        android:id="@+id/tv_rise_mm"
        style="@style/KillerDealer.Text.title"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/mm"
        app:layout_constraintBottom_toBottomOf="@+id/np_rise_mm_config"
        app:layout_constraintRight_toLeftOf="@+id/np_rise_ss_config"
        app:layout_constraintTop_toTopOf="@+id/np_rise_mm_config" />

    <NumberPicker
        android:id="@+id/np_rise_ss_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rise_mm"
        app:layout_constraintRight_toLeftOf="@+id/tv_rise_ss"
        app:layout_constraintTop_toTopOf="@+id/tv_rise_mm" />

    <TextView
        android:id="@+id/tv_rise_ss"
        style="@style/KillerDealer.Text.title"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="0dp"
        android:text="@string/ss"
        app:layout_constraintBottom_toBottomOf="@+id/np_rise_ss_config"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/np_rise_ss_config" />

    <TextView
        android:id="@+id/tv_rebuy_config"
        style="@style/KillerDealer.Text.title"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/rebuy_title"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rise_config"
        app:layout_constraintTop_toBottomOf="@+id/np_rise_mm_config" />

    <NumberPicker
        android:id="@+id/np_rebuy_hh_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_rebuy_hh"
        app:layout_constraintTop_toTopOf="@+id/tv_rebuy_config" />

    <TextView
        android:id="@+id/tv_rebuy_hh"
        style="@style/KillerDealer.Text.title"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/hh"
        app:layout_constraintBottom_toBottomOf="@+id/np_rebuy_hh_config"
        app:layout_constraintRight_toLeftOf="@+id/np_rebuy_mm_config"
        app:layout_constraintTop_toTopOf="@+id/np_rebuy_hh_config" />

    <NumberPicker
        android:id="@+id/np_rebuy_mm_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rebuy_hh"
        app:layout_constraintRight_toLeftOf="@+id/tv_rebuy_mm"
        app:layout_constraintTop_toTopOf="@+id/tv_rebuy_hh" />

    <TextView
        android:id="@+id/tv_rebuy_mm"
        style="@style/KillerDealer.Text.title"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/mm"
        app:layout_constraintBottom_toBottomOf="@+id/np_rebuy_mm_config"
        app:layout_constraintRight_toLeftOf="@+id/np_rebuy_ss_config"
        app:layout_constraintTop_toTopOf="@+id/np_rebuy_mm_config" />

    <NumberPicker
        android:id="@+id/np_rebuy_ss_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rebuy_mm"
        app:layout_constraintRight_toLeftOf="@+id/tv_rebuy_ss"
        app:layout_constraintTop_toTopOf="@+id/tv_rebuy_mm" />

    <TextView
        android:id="@+id/tv_rebuy_ss"
        style="@style/KillerDealer.Text.title"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="0dp"
        android:text="@string/ss"
        app:layout_constraintBottom_toBottomOf="@+id/np_rebuy_ss_config"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/np_rebuy_ss_config" />

</android.support.constraint.ConstraintLayout>
