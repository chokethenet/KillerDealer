<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_blind_small"
        style="@style/KillerDealer.Image.circle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_blind_title"
        app:srcCompat="@drawable/circle" />

    <EditText
        android:id="@+id/et_blind"
        style="@style/KillerDealer.Text.number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blind_small"
        app:layout_constraintLeft_toLeftOf="@+id/iv_blind_small"
        app:layout_constraintRight_toRightOf="@+id/iv_blind_small"
        app:layout_constraintTop_toTopOf="@+id/iv_blind_small"
        tools:text="250" />
</android.support.constraint.ConstraintLayout>